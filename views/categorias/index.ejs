<%- include('../header') %>

<a href="/categorias/nova" class="btn btn-primary my-3"><i class="fas fa-plus"></i> Adicionar Categoria</a>
<a href="/publicacoes/nova" class="btn btn-primary my-3"><i class="fas fa-plus"></i> Adicionar Publicação</a>

  <table class="table table-hover table-striped">
    <thead class="thead-dark">
      <tr>
        <th scope="col">Categoria</th>
        <th scope="col">Ações</th>
      </tr>
    </thead>
    <tbody>
      <% categorias.forEach(categoria => { %>
      <tr>
        <td>
          <a href="/publicacoes/categoria/<%= categoria.id %>">
            <%= categoria.categoria %>
          </a>
        </td>
        <td>
          <a href="/categorias/editar/<%= categoria.id %>">Editar</a>
          <a href="/categorias/excluir/<%= categoria.id %>">Excluir</a>
        </td>
      </tr>
      <% }) %>
    </tbody>
  </table>
<%- include('../footer') %>