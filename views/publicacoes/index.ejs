<%- include('../header') %>

<a href="/categorias" class="btn btn-primary my-3"><i class="fas fa-arrow-left"></i> Voltar</a>
<a href="/publicacoes/nova" class="btn btn-primary my-3"><i class="fas fa-plus"></i> Adicionar Publicação</a>

  <table class="table table-hover table-striped">
    <thead class="thead-dark">
      <tr>
        <th scope="col">Publicação</th>
        <th scope="col">Ações</th>
      </tr>
    </thead>
    <tbody>
      <% publicacoes.forEach(publicacao => { %>
      <tr>
        <td><%= publicacao.titulo %></td>
        <td>
          <a href="/publicacoes/editar/<%= categoria %>/<%= publicacao.id %>">Editar</a>
          <a href="/publicacoes/excluir/<%= categoria %>/<%= publicacao.id %>">Excluir</a>
        </td>
      </tr>
      <% }) %>
    </tbody>
  </table>
<%- include('../footer') %>